%ul.inventory
  - adventure.inventory.each do |item|
    %li{class: item}
      - if adventure.currently_using == item
        %span{class: 'currently-using'}= item
      - else
        = item
      %br/
      = link_to('use', use_item_path(item))
      %br/
      = link_to('drop', drop_item_path(item))
