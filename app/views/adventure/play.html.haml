- available_directions = adventure.available_directions

= direction_arrow('north', available_directions)

= direction_arrow('west', available_directions)
= direction_arrow('east', available_directions)

#content
  = render :partial => 'shared/flash_messages'

  .description= adventure.description.html_safe

  = render :partial => 'adventure/items_here'

= direction_arrow('south', available_directions)

#controls
  = render :partial => 'adventure/inventory'

  %p.score== Score: #{adventure.score}

  %p= link_to 'Save', save_adventure_path
  %p= link_to 'Quit', quit_adventure_path
